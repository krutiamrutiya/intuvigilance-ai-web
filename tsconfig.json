{
  "compilerOptions": {
    "types": ["node"],
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "target": "es2018",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@store/*": ["src/store/*"],
      "@routes/*": ["src/routes/*"],
      "@features/*": ["src/features/*"],
      "@services/*": ["src/services/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"],
      "@constants/*": ["src/constants/*"],
      "@types/*": ["src/types/*"],
      "@config/*": ["src/config/*"],
      "@api/*": ["src/api/*"],
      "@context/*": ["src/context/*"],
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
